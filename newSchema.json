{
    "$id": "http://ixofoundation/submit_claim.json",
    "required": [
        "payload",
        "signature"
    ],
    "additionalProperties": false,
    "definitions": {},
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
        "payload": {
            "$id": "/properties/payload",
            "additionalProperties": true,
            "required": [
                "data",
                "template"
            ],
            "type": "object",
            "properties": {
                "data": {
                    "$id": "/properties/payload/properties/data",
                    "additionalProperties": true,
                    "required": [
                        "Picture of a bucket of water",
                        "Receipt of something"
                    ],
                    "type": "object",
                    "properties": {
                        "projectDid": {
                            "$id": "/properties/payload/properties/data/properties/projectDid",
                            "default": "",
                            "type": "string",
                            "examples": [
                                "did:ixo:23423432"
                            ],
                            "title": "The project did"
                        },
                        "Picture of a bucket of water": {
                            "$id": "/properties/payload/properties/data/properties/projectDid",
                            "default": "",
                            "type": "string",
                            "examples": [],
                            "title": "Receipt of something"
                        },
                        "Receipt of something": {
                            "$id": "/properties/payload/properties/data/properties/projectDid",
                            "default": "",
                            "type": "string",
                            "examples": [],
                            "title": "Receipt of something"
                        }
                    }
                },
                "template": {
                    "$id": "/properties/payload/properties/template",
                    "required": [
                        "name"
                    ],
                    "type": "object",
                    "properties": {
                        "name": {
                            "default": "",
                            "type": "string",
                            "examples": [
                                "submit_claim"
                            ],
                            "title": "The Name Schema "
                        }
                    }
                }
            }
        },
        "signature": {
            "$id": "/properties/signature",
            "additionalProperties": false,
            "required": [
                "type",
                "created",
                "signatureValue",
                "creator"
            ],
            "type": "object",
            "properties": {
                "creator": {
                    "title": "The Creator Schema ",
                    "$id": "/properties/signature/properties/creator",
                    "required": [
                        "creator"
                    ],
                    "default": "",
                    "examples": [
                        "did:ixo:987654321"
                    ],
                    "type": "string"
                },
                "type": {
                    "title": "The Type Schema ",
                    "$id": "/properties/signature/properties/type",
                    "required": [
                        "type"
                    ],
                    "default": "",
                    "examples": [
                        "ECDSA"
                    ],
                    "type": "string"
                },
                "signatureValue": {
                    "title": "The Signature Schema ",
                    "$id": "/properties/signature/properties/signatureValue",
                    "required": [
                        "signatureValue"
                    ],
                    "default": "",
                    "examples": [
                        "0x1d4a6d5efce1312944f781fb917b484f2ac0c74c53fe8b571dc8f1be6dc6b6692db3e3d08c0a934631f81bf0bba50c591385d34819ac955ec16f38ee04ee480201"
                    ],
                    "type": "string"
                },
                "created": {
                    "title": "The Created Schema ",
                    "$id": "/properties/signature/properties/created",
                    "required": [
                        "created"
                    ],
                    "default": "",
                    "examples": [
                        "2016-02-08T16:02:20Z"
                    ],
                    "type": "string"
                }
            }
        }
    }
}